<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="projectConfigurators" name="Project Configurators" schema="schema/projectConfigurators.exsd"/>

   <extension point="org.eclipse.core.runtime.adapters">
      <factory adaptableType="org.eclipse.core.resources.IResource"
               class="org.sonar.ide.eclipse.core.SonarElementsAdapterFactory">
         <adapter type="org.sonar.ide.eclipse.core.resources.ISonarResource"/>
      </factory>
      <factory adaptableType="org.eclipse.core.resources.IFile"
               class="org.sonar.ide.eclipse.core.SonarElementsAdapterFactory">
         <adapter type="org.sonar.ide.eclipse.core.resources.ISonarFile"/>
      </factory>
      <factory adaptableType="org.eclipse.core.resources.IProject"
           class="org.sonar.ide.eclipse.core.SonarElementsAdapterFactory">
        <adapter type="org.sonar.ide.eclipse.core.resources.ISonarProject"/>
      </factory>
   </extension>
   
  <extension point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
        class="org.sonar.ide.eclipse.core.IsAssociatedTester"
        id="org.sonar.ide.eclipse.isAssociated"
        namespace="org.sonar.ide.eclipse"
        properties="isAssociated"
        type="org.eclipse.core.resources.IProject">
    </propertyTester>
  </extension>

   <extension
         id="sonarNature"
         name="SonarQube Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.sonar.ide.eclipse.core.internal.SonarNature">
         </run>
      </runtime>
      <builder id="org.sonar.ide.eclipse.core.sonarQubeBuilder"/>
   </extension>

   <extension
        id="sonarProblem"
        name="SonarQube Issue"
        point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="rulename">
      </attribute>
      <attribute
            name="rulekey">
      </attribute>
      <attribute
            name="is_new">
      </attribute>
   </extension>

   <extension
        id="sonarProblemNewIssue"
        name="New SonarQube Issue"
        point="org.eclipse.core.resources.markers">
      <super
            type="org.sonar.ide.eclipse.core.sonarProblem">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="rulename">
      </attribute>
      <attribute
            name="rulekey">
      </attribute>
      <attribute
            name="is_new">
      </attribute>
   </extension>

  <extension id="sonarQubeBuilder" name="SonarQube Builder" point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="org.sonar.ide.eclipse.core.internal.builder.SonarQubeBuilder">
            <parameter name="natureId" value="sonarNature"/>
         </run>
      </builder>
   </extension>
</plugin>
